<div class='mt-4'>
    <h2>Cập nhật khóa học</h2>
    <form class='mt-4' method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='name'>Tên khóa học</label>
            <input type='text' class='form-control' value='{{course.name}}' name='name' id='name' />
        </div>
        <div class='form-group'>
            <label for='description'>Mô tả khóa học</label>
            <textarea class='form-control' name='description' id='description'>{{course.description}}</textarea>
        </div>
        <div class='form-group'>
            <label for='videoId'>ID video</label>
            <input type='text' class='form-control' value='{{course.videoId}}' name='videoId' id='videoId' />
        </div>
        <div class='form-group'>
            <label for='level'>Trình độ</label>
            <input type='text' class='form-control' value='{{course.level}}' name='level' id='level' />
        </div>

        <button type='submit' class='btn btn-primary'>Cập nhật</button>
    </form>
</div>